<assembly>
    <id>bundle</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>resources</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        
        <fileSet>
            <directory>target/apache-maven-${mavenVersion}</directory>
            <outputDirectory>/bundled-maven</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!--
        Install non-eventspy impl jars w/ version.
        -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>com.sonatype.matrix.maven:matrix-maven-eventspy-3.0</exclude>
            </excludes>
        </dependencySet>

        <!--
        Install eventspy impl jars w/o version.
        -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>com.sonatype.matrix.maven:matrix-maven-eventspy-3.0</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>