<enunciate
        label="maven3-plugin"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://enunciate.codehaus.org/schemas/enunciate-1.20.xsd">

    <api-classes>
        <include pattern="org.hudsonci.maven.plugin.**.rest.**"/>
    </api-classes>

    <namespaces>
        <namespace id="common" uri="http://hudson-ci.org/xsd/hudson/2.0.1/maven/common"/>
        <namespace id="config" uri="http://hudson-ci.org/xsd/hudson/2.0.1/maven/config"/>
        <namespace id="state" uri="http://hudson-ci.org/xsd/hudson/2.0.1/maven/state"/>
    </namespaces>

    <webapp disable="true"/>

    <modules>
        <docs disabled="false"
              docsDir="api"
              title="Hudson Maven Plugin REST API"
              copyright="Sonatype, Inc."
              includeDefaultDownloads="false"
              includeExampleXml="true"
              includeExampleJson="true"/>

        <!-- Disable everything else -->
        <jersey disabled="true"/>
        <csharp disabled="true"/>
        <c disabled="true"/>
        <jaxws-ri disabled="true"/>
        <jaxws-client disabled="true"/>
        <jaxws-support disabled="true"/>
        <amf disabled="true"/>
        <obj-c disabled="true"/>
        <xml disabled="true"/>
        <basic-app disabled="true"/>
    </modules>

</enunciate>
